<!-- Modal de Confirmación de Cambio de Rol -->
<div class="modal fade" id="modalCambioRol" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">
          <i class="fas fa-shield-alt me-2 text-warning"></i>
          Cambio de Rol - Autorización Requerida
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
      </div>
      <div class="modal-body">
        <!-- Alerta de seguridad -->
        <div class="alert alert-danger d-flex align-items-center" role="alert">
          <i class="fas fa-exclamation-triangle me-2"></i>
          <div>
            <strong>¡Acción de alta seguridad!</strong><br>
            <small>Este cambio afectará los permisos del usuario y requiere autorización administrativa.</small>
          </div>
        </div>
        
        <!-- Información del usuario -->
        <div class="row mb-4">
          <div class="col-md-6">
            <h6 class="text-muted mb-3">Información del Usuario</h6>
            <p class="mb-2"><strong>Nombre:</strong> <span id="usuarioNombreCambio"></span></p>
            <p class="mb-2"><strong>Email:</strong> <span id="usuarioEmailCambio"></span></p>
            <p class="mb-0"><strong>ID:</strong> <small class="text-muted" id="usuarioIdCambio"></small></p>
          </div>
          <div class="col-md-6">
            <h6 class="text-muted mb-3">Cambio de Rol</h6>
            <div class="d-flex align-items-center mb-2">
              <span class="me-2">De:</span>
              <span id="rolActualCambio" class="badge"></span>
            </div>
            <div class="d-flex align-items-center mb-3">
              <span class="me-2">A:</span>
              <span id="rolNuevoCambio" class="badge"></span>
            </div>
          </div>
        </div>

        <!-- Permisos del nuevo rol -->
        <div class="mb-4">
          <h6 class="text-muted mb-2">Permisos del nuevo rol:</h6>
          <div class="bg-light p-3 rounded">
            <ul id="permisosNuevoRol" class="mb-0">
              <!-- Se llenarán dinámicamente -->
            </ul>
          </div>
        </div>

        <!-- Formulario de autorización -->
        <form id="formCambioRol">
          <!-- Motivo del cambio (obligatorio) -->
          <div class="mb-3">
            <label for="motivoCambio" class="form-label">
              <i class="fas fa-edit me-1"></i>
              Motivo del cambio <span class="text-danger">*</span>
            </label>
            <textarea class="form-control" id="motivoCambio" rows="3" 
                      placeholder="Explica el motivo del cambio de rol..." required></textarea>
            <div class="form-text">Este motivo quedará registrado en los logs de auditoría.</div>
          </div>

          <!-- Confirmación de contraseña del admin -->
          <div class="mb-3">
            <label for="passwordAdmin" class="form-label">
              <i class="fas fa-key me-1"></i>
              Confirma tu contraseña <span class="text-danger">*</span>
            </label>
            <input type="password" class="form-control" id="passwordAdmin" 
                   placeholder="Tu contraseña de administrador" required>
            <div class="form-text">Requerido para autorizar cambios de rol.</div>
          </div>

          <!-- Confirmación adicional para admin -->
          <div id="confirmacionAdmin" class="mb-3" style="display: none;">
            <div class="alert alert-warning">
              <i class="fas fa-crown me-2"></i>
              <strong>¡Atención!</strong> Estás otorgando permisos de administrador.
              <div class="form-check mt-2">
                <input class="form-check-input" type="checkbox" id="confirmarAdmin">
                <label class="form-check-label" for="confirmarAdmin">
                  Confirmo que entiendo que este usuario tendrá acceso completo al sistema
                </label>
              </div>
            </div>
          </div>

          <!-- Confirmación final -->
          <div class="form-check mb-3">
            <input class="form-check-input" type="checkbox" id="confirmarCambio" required>
            <label class="form-check-label" for="confirmarCambio">
              He verificado toda la información y confirmo que deseo realizar este cambio
            </label>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          <i class="fas fa-times me-1"></i>
          Cancelar
        </button>
        <button type="button" id="btnConfirmarCambio" class="btn btn-danger">
          <span class="btn-text">
            <i class="fas fa-shield-alt me-1"></i>
            Autorizar Cambio
          </span>
          <span class="btn-loading" style="display: none;">
            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
            Procesando...
          </span>
        </button>
      </div>
    </div>
  </div>
</div>

<!-- Modal para Crear/Editar Producto -->
<div class="modal fade" id="modalProducto" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">
          <i class="fas fa-box me-2"></i>
          <span id="tituloModalProducto">Nuevo Producto</span>
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
      </div>
      <div class="modal-body">
        <form id="formProducto">
          <input type="hidden" id="productoId" value="">
          
          <div class="row">
            <div class="col-md-8">
              <!-- Nombre del producto -->
              <div class="mb-3">
                <label for="nombreProducto" class="form-label">
                  <i class="fas fa-tag me-1"></i>
                  Nombre del producto <span class="text-danger">*</span>
                </label>
                <input type="text" class="form-control" id="nombreProducto" required>
              </div>

              <!-- Descripción -->
              <div class="mb-3">
                <label for="descripcionProducto" class="form-label">
                  <i class="fas fa-align-left me-1"></i>
                  Descripción
                </label>
                <textarea class="form-control" id="descripcionProducto" rows="3"></textarea>
              </div>

              <!-- Categoría y precio en una fila -->
              <div class="row">
                <div class="col-md-6">
                  <div class="mb-3">
                    <label for="categoriaProducto" class="form-label">
                      <i class="fas fa-list me-1"></i>
                      Categoría <span class="text-danger">*</span>
                    </label>
                    <select class="form-select" id="categoriaProducto" required>
                      <option value="">Seleccionar categoría</option>
                      <option value="plantas">Plantas</option>
                      <option value="macetas">Macetas</option>
                      <option value="herramientas">Herramientas</option>
                      <option value="fertilizantes">Fertilizantes</option>
                    </select>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="mb-3">
                    <label for="precioProducto" class="form-label">
                      <i class="fas fa-dollar-sign me-1"></i>
                      Precio base <span class="text-danger">*</span>
                    </label>
                    <input type="number" class="form-control" id="precioProducto" step="0.01" min="0" required>
                  </div>
                </div>
              </div>

              <!-- Stock y disponibilidad -->
              <div class="row">
                <div class="col-md-6">
                  <div class="mb-3">
                    <label for="stockProducto" class="form-label">
                      <i class="fas fa-cubes me-1"></i>
                      Stock inicial
                    </label>
                    <input type="number" class="form-control" id="stockProducto" min="0" value="0">
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="mb-3">
                    <label class="form-label">
                      <i class="fas fa-toggle-on me-1"></i>
                      Estado
                    </label>
                    <div class="form-check form-switch">
                      <input class="form-check-input" type="checkbox" id="disponibilidadProducto" checked>
                      <label class="form-check-label" for="disponibilidadProducto">
                        Disponible para la venta
                      </label>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <div class="col-md-4">
              <!-- Imagen del producto -->
              <div class="mb-3">
                <label class="form-label">
                  <i class="fas fa-image me-1"></i>
                  Imagen del producto
                </label>
                <div class="text-center">
                  <div id="previewImagen" class="mb-3" style="border: 2px dashed #ccc; padding: 20px; border-radius: 8px;">
                    <i class="fas fa-image fa-3x text-muted mb-2"></i>
                    <p class="text-muted mb-0">Haz clic para seleccionar imagen</p>
                  </div>
                  <input type="file" class="form-control" id="imagenProducto" accept="image/*" style="display: none;">
                  <button type="button" class="btn btn-outline-primary btn-sm" onclick="document.getElementById('imagenProducto').click()">
                    <i class="fas fa-upload me-1"></i>
                    Seleccionar imagen
                  </button>
                </div>
              </div>
            </div>
          </div>

          <!-- Etiquetas -->
          <div class="mb-3">
            <label for="etiquetasProducto" class="form-label">
              <i class="fas fa-tags me-1"></i>
              Etiquetas (separadas por comas)
            </label>
            <input type="text" class="form-control" id="etiquetasProducto" placeholder="ej: interior, bajo mantenimiento, decorativa">
            <div class="form-text">Las etiquetas ayudan a categorizar y buscar productos</div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          <i class="fas fa-times me-1"></i>
          Cancelar
        </button>
        <button type="button" class="btn btn-primary" onclick="window.adminProductos.guardarProducto()">
          <span class="btn-text">
            <i class="fas fa-save me-1"></i>
            <span id="textoBotonGuardar">Guardar Producto</span>
          </span>
          <span class="btn-loading" style="display: none;">
            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
            Guardando...
          </span>
        </button>
      </div>
    </div>
  </div>
</div>

