<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Vivero Verde Nexo</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
  <!-- NAVBAR (DESKTOP)-->
  <nav class="navbar navbar-expand-lg navbar-vn sticky-top d-none d-lg-flex">
    <div class="container-fluid px-4 align-items-center">
      <!-- Secciones -->
      <div class="collapse navbar-collapse order-1 order-lg-0" id="navbar-vn-1" style="flex: 1;">
        <ul class="navbar-nav mb-3 mb-lg-0">
          <li class="nav-item"><a class="nav-link navbar-vn-links" href="/">Inicio</a></li>
          <li class="nav-item"><a class="nav-link navbar-vn-links" href="/catalogo">Catálogo</a></li>
          <li class="nav-item"><a class="nav-link navbar-vn-links" href="/servicios">Servicios</a></li>
          <li class="nav-item"><a class="nav-link navbar-vn-links" href="/blog">Blog</a></li>
          <li class="nav-item"><a class="nav-link navbar-vn-links" href="/contacto">Contacto</a></li>
        </ul>
      </div>

      <!--Logo -->
      <div class="text-center order-0" style="flex: 1;">
        <a href="/"><img src="/img/logo.png" alt="Verde Nexo" height="45"></a>
      </div>

      <!--Buscador + botones -->
      <!---Buscador-->
      <div class="d-flex align-items-center justify-content-end order-2" style="flex: 1; gap: 0.75rem;">
        <form class="d-none d-lg-flex" role="search" style="min-width: 200px;">
          <div class="input-group">
            <span class="input-group-text">
              <img src="/img/search-alt.png" alt="Buscar" width="16" height="16">
            </span>
            <input class="form-control" type="search" placeholder="Buscar..." aria-label="Buscar">
          </div>
        </form>
        <!-- Botones de inicio de sesión y carrito -->
        <div id="botonesSesion" class="d-flex" style="gap: 0.5rem;">
          <!-- Inicio Sesion-->
          <a id="loginLink" href="/login" class="btn btn-vn-session" type="button">
            <img src="/img/log-in-alt.png" alt="Iniciar sesión" width="20" height="20">
          </a>
          <!-- Registro -->
          <a id="registerLink" href="/register" class="btn btn-vn-session" type="button">
            <img src="/img/user-plus-alt.png" alt="Registrarse" width="20" height="20">
          </a>
          <!-- Carrito de compras -->
          <a href="/carrito" class="btn btn-vn-session position-relative" aria-expanded="false" type="button">
            <img src="/img/shopping-cart-alt.png" alt="carrito" width="20" height="20">
            <span id="cartCount" class="badge bg-danger position-absolute top-0 start-100 translate-middle rounded-pill" style="display: none;">0</span>
          </a>
        </div>
        <!-- Botón de perfil (oculto por defecto) -->
        <button id="btnPerfil" class="btn btn-vn-session" type="button" style="display: none;">
          <img src="/img/icon-user.svg" alt="Perfil" width="20" height="20">
        </button>
      </div>
    </div>
  </nav>


  <!-- NAVBAR (MOBILE)-->
  <header class="d-lg-none py-3">
    <div class="container d-flex justify-content-between align-items-center">
      <!-- Espacio vacío izquierda -->
      <div class="flex-fill">
      </div>
      <!-- Logo centrado -->
      <div class="flex-fill text-center">
        <a href="/"><img src="/img/logo.svg" alt="Verde Nexo" height="40" class="logo-verde-pasto"></a>
      </div>
      <!-- Carrito derecha -->
      <div class="flex-fill text-end">
        <a href="/carrito" class="me-2">
          <img src="/img/shopping-cart-alt.png" alt="carrito" width="26" height="26">
        </a>
      </div>
    </div>

    <!-- Buscador grande estilo tarjeta -->
    <div class="container mt-3">
      <form class="w-100 mobile-search" role="search" action="/buscar" method="GET">
        <div class="input-group">
          <input class="form-control mobile-search-input" name="q" type="search" placeholder="¿Qué buscas?"
            aria-label="Buscar">
          <button class="btn mobile-search-btn input-group-text" type="submit" aria-label="Buscar"
            style="border: none; background: transparent;">
            <img src="/img/search-alt.png" alt="buscar" width="18" height="18">
          </button>
        </div>
      </form>
    </div>
  </header>

  <!-- Modal de Perfil -->
  <div class="modal fade" id="modalPerfil" tabindex="-1" aria-labelledby="modalPerfilLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="modalPerfilLabel">Perfil</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <button id="editProfileBtn" class="btn btn-primary w-100 mb-2">Editar Perfil</button>
          <button id="logoutBtnModal" class="btn btn-danger w-100">Cerrar Sesión</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal de Auth Móvil -->
  <div class="modal fade" id="modalAuthMobile" tabindex="-1" aria-labelledby="modalAuthMobileLabel" aria-hidden="true">
    <div class="modal-dialog modal-fullscreen">
      <div class="modal-content" style="background: #181818; color: #fff;">
        <div class="modal-body d-flex flex-column align-items-center justify-content-center"
          style="min-height: 100vh; padding: 20px;">
          <!-- Botón de atrás arriba -->
          <div class="w-100 text-start mb-3">
            <button type="button" class="btn btn-link text-white p-0 modal-auth-back-btn" data-bs-dismiss="modal">
              <img src="https://pic.onlinewebfonts.com/thumbnails/icons_517435.svg" alt="Atrás" width="30" height="30">
            </button>
          </div>
          <!-- Logo centrado -->
          <div class="text-center mb-4">
            <img src="/img/logo.svg" alt="Verde Nexo" height="60" class="logo-blanco">
          </div>

          <!-- Formulario de Login -->
          <div id="loginFormMobile" class="w-100" style="max-width: 340px;">
            <form id="loginForm" autocomplete="on">
              <label for="emailMobile" class="mb-1">Correo Electrónico</label>
              <input type="email" id="emailMobile" name="email" class="form-control mb-2" placeholder="tu@ejemplo.com"
                required style="height: 38px;">
              <label for="passwordMobile" class="mb-1">Contraseña</label>
              <input type="password" id="passwordMobile" name="password" class="form-control mb-2"
                placeholder="Ingresa tu contraseña" required style="height: 38px;">
              <div class="d-flex justify-content-between align-items-center mb-3">
                <a href="/recuperar" class="text-success" style="font-size: 0.95rem;">¿Olvidaste tu contraseña?</a>
              </div>
              <button type="submit"
                class="btn btn-success w-100 d-flex align-items-center justify-content-center gap-2 fw-bold mb-2"
                style="font-size: 1rem; height: 40px;">
                <img
                  src="https://pic.onlinewebfonts.com/thumbnails/icons_211161.svg?width=5&amp;config=eyJwYXRoIjpbImZmZmZmZiJdfQ=="
                  alt="user" width="20" height="20"> Iniciar Sesión
              </button>
              <div class="divider my-3 text-center text-secondary" style="font-size: 0.95rem;">o continúa con</div>
              <div class="d-flex justify-content-center align-items-center">
                <button class="google-btn-circle" id="googleAuth">
                  <img src="https://upload.wikimedia.org/wikipedia/commons/c/c1/Google_%22G%22_logo.svg" alt="Google">
                </button>
              </div>
            </form>
            <div class="mt-3 text-center" style="font-size: 0.97rem;">
              ¿No tienes cuenta? <button id="switchToRegister" class="text-success fw-bold"
                style="border: none; background: none;">Regístrate</button>
            </div>
          </div>

          <!-- Formulario de Register -->
          <div id="registerFormMobile" class="w-100" style="max-width: 340px; display: none;">
            <form id="registerForm" autocomplete="on">
              <label for="usernameMobile" class="mt-1 mb-1">Nombre de Usuario</label>
              <input type="text" id="usernameMobile" name="username" class="form-control mb-2"
                placeholder="Ingresa tu nombre de usuario" required style="height: 38px;">
              <label for="cellphoneMobile" class="mb-1">Teléfono (Opcional)</label>
              <input type="tel" id="cellphoneMobile" name="cellphone" class="form-control mb-2"
                placeholder="(+57) 300 123 4567" style="height: 38px;">
              <label for="emailRegMobile" class="mb-1">Correo Electrónico</label>
              <input type="email" id="emailRegMobile" name="email" class="form-control mb-2"
                placeholder="tu@ejemplo.com" required style="height: 38px;">
              <label for="passwordRegMobile" class="mb-1">Contraseña *</label>
              <input type="password" id="passwordRegMobile" name="password" class="form-control mb-1"
                placeholder="Mínimo 6 caracteres" required style="height: 38px;">
              <small class="text-light mb-2 d-block" style="font-size: 0.97rem;">
                Recomendamos usar al menos 8 caracteres con mayúsculas, números y símbolos.
              </small>
              <label for="confirmPasswordMobile" class="mb-1">Confirmar Contraseña</label>
              <input type="password" id="confirmPasswordMobile" name="confirmPassword" class="form-control mb-2"
                placeholder="Confirma tu contraseña" required style="height: 38px;">
              <div class="form-check mb-2">
                <input class="form-check-input" type="checkbox" id="acceptTermsMobile" name="acceptTerms" required>
                <label class="form-check-label" for="acceptTermsMobile" style="font-size: 0.95rem;">
                  Acepto las <a href="#" class="text-success">políticas de privacidad</a> y
                  <a href="#" class="text-success">términos de servicio</a> de VerdeNexo.
                </label>
              </div>
              <button type="submit"
                class="btn btn-success w-100 d-flex align-items-center justify-content-center gap-2 fw-bold mb-2"
                style="font-size: 1rem; height: 40px;">
                <img
                  src="https://pic.onlinewebfonts.com/thumbnails/icons_330894.svg?width=5&amp;config=eyJwYXRoIjpbImZiZmJmYiIsImZiZmJmYiJdfQ=="
                  alt="check" width="20" height="20"> Crear Cuenta
              </button>
            </form>
            <div class="mt-3 text-center" style="font-size: 0.97rem;">
              ¿Ya tienes cuenta? <button id="switchToLogin" class="text-success fw-bold"
                style="border: none; background: none;">Inicia Sesión</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <script type="module" src="/js/navbar.js"></script>
  <script type="module" src="/js/cart.js"></script>
  <script type="module" src="/js/register.functions.js"></script>

  <style>
    .modal-auth-back-btn {
      transition: transform 0.2s;
    }

    .modal-auth-back-btn:hover {
      transform: scale(1.1);
    }

    .modal-auth-back-btn img {
      filter: brightness(0) invert(1);
      /* Para que sea blanco si es negro */
    }

    .google-btn-circle {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 45px;
      height: 45px;
      border-radius: 50%;
      border: 1px solid #ccc;
      background-color: #fff;
      transition: all 0.2s ease;
    }

    .google-btn-circle img {
      width: 20px;
      height: 20px;
    }

    .google-btn-circle:hover {
      background-color: #f5f5f5;
      transform: scale(1.05);
    }

    .logo-blanco {
      filter: brightness(0) invert(1);
    }

    .logo-verde-pasto {
      filter: invert(43%) sepia(83%) saturate(531%) hue-rotate(74deg) brightness(92%) contrast(88%);
    }
  </style>
</body>

</html>