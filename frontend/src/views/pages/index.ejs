}

.btn-light {
    background: linear-gradient(135deg, #ffffff, #f8f9fa);
    border: none;
    color: #28a745;
    font-weight: 600;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
