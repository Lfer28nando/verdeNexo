}

/* Animaciones de entrada */
@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.features-section,
.products-preview,
.categories-section,
.testimonials-section,
.cta-section,
.faq-section,
