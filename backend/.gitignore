node_modules/
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# Environment variables (backend-specific)
.env
.env.local
.env.development.local
.env.test.local
.env.production.local

# Logs (backend-specific)
logs/
*.log
npm-debug.log*
yarn-debug.log*
yarn-error.log*
lerna-debug.log*

# Runtime data
pids/
*.pid
*.seed
*.pid.lock

