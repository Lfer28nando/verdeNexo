coverage/
*.lcov
.nyc_output/
test-results.json
test-results.xml
test-report.html

# Newman (Postman CLI) - specific to backend testing
newman/

# Build outputs
dist/
build/

# Cache directories
.npm
.eslintcache
.rpt2_cache/
.rts2_cache_cjs/
.rts2_cache_es/
.rts2_cache_umd/
.cache
.parcel-cache

# Temporary files
tmp/
temp/

# IDE/Editor files (backend-specific)
.vscode/*
!.vscode/extensions.json
.idea/
*.swp
*.swo
*~

# OS files
.DS_Store
Thumbs.db

