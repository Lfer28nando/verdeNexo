# Archivo de ejemplo de variables de entorno para Render
# NO subir al repositorio con valores reales

# Base de datos MongoDB
MONGO_URI=mongodb+srv://usuario:password@cluster.mongodb.net/
MONGO_DB_NAME=verdenexo_production

# Seguridad
SESSION_SECRET=tu_session_secret_muy_seguro_aqui
JWT_SECRET=tu_jwt_secret_muy_seguro_aqui
API_KEY=tu_api_key_segura_aqui

# Email (si usas nodemailer)
EMAIL_USER=tu_email@gmail.com
EMAIL_PASS=tu_password_o_app_password

# Entorno
NODE_ENV=production
PORT=10000

# URL del frontend (será asignada automáticamente por Render)
FRONTEND_URL=https://tu-app-name.onrender.com